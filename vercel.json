{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "/index.html" }
    },
    {
      "src": "server/package.json",
      "use": "@vercel/node"
    }
  ],
  "build": {
    "env": {
      "DEBUG": true,
      "NODE_ENV": "production"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/src/$1" },
    { "src": "/auth/google", "dest": "/server/src/app.js" },
    { "src": "/auth/google/callback", "dest": "/server/src/app.js" },
    { "src": "/api/current_user", "dest": "/server/src/app.js" },
    { "src": "/restaurants/(.*)", "dest": "/server/src/routes/restaurants.js" },
    { "src": "/meals/(.*)", "dest": "/server/src/routes/meals.js" },
    { "src": "/beverages/(.*)", "dest": "/server/src/routes/beverages.js" },
    { "src": "/search/(.*)", "dest": "/server/src/routes/search.js" },
    { "src": "/favorites/(.*)", "dest": "/server/src/routes/favorites.js" },
    { "src": "/reviews/(.*)", "dest": "/server/src/routes/reviews.js" },
    { "src": "/userDetails/(.*)", "dest": "/server/src/routes/user.js" },
    { "src": "/getNameById/(.*)", "dest": "/server/src/routes/getNameById.js" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ]
}